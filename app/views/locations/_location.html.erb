<%= turbo_frame_tag dom_id(location) do %>
  <article class="bg-white shadow-sm rounded-xl p-4 flex items-start justify-between gap-3">
    <div>
      <h3 class="font-semibold text-slate-900">
        <%= link_to location.name, location, class: "hover:underline", data: { turbo_frame: "_top" } %>
      </h3>
      <p class="text-sm text-slate-600 mt-1">
        <% if location.street_address.present? %>
          <%= location.street_address %>
        <% elsif location.ip_address.present? %>
          IP: <%= location.ip_address %>
        <% end %>
      </p>
    </div>
    <div class="flex flex-col gap-1 text-sm">
      <%= link_to "Edit", edit_location_path(location),
            class: "text-blue-600 hover:text-blue-800",
            data: { turbo_frame: "_top" } %>
      <%= button_to "Delete", location,
            method: :delete,
            data: { turbo_confirm: "Delete #{location.name}?" },
            class: "text-red-600 hover:text-red-800 text-left" %>
    </div>
  </article>
<% end %>