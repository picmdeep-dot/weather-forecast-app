<h2 class="text-xl font-semibold mb-2">Your saved locations</h2>
<p class="text-sm text-slate-600 mb-4">
  Create locations by entering a city/state or use your location and see a 7-day forecast for each.
</p>

<%= turbo_frame_tag "locations" do %>
  <% if @locations.any? %>
    <div id="locations_list" class="grid gap-4 md:grid-cols-2">
      <%= render @locations %>
    </div>
  <% else %>
    <div id="locations_list">
      <div class="rounded-xl border border-dashed border-slate-300 bg-white/60 p-4">
        <p class="text-slate-600">
          No locations yet. Add your first one below to get started.
        </p>
      </div>
    </div>
  <% end %>
<% end %>

<hr class="my-8">

<section class="bg-white shadow-sm rounded-xl p-5">
  <h3 class="text-lg font-semibold mb-1">Add a location</h3>
  <p class="text-sm text-slate-600 mb-4">
    Choose "Enter Location" for cities/places, or "Use My Location" for network-based locations.
  </p>

  <%= turbo_frame_tag "new_location" do %>
    <%= render "form", location: @location %>
  <% end %>
</section>
